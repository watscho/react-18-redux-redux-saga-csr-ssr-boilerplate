{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [
     "DOM",
     "DOM.Iterable",
     "ESNext"
    ],
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["ts/*"],
      "fonts/*": ["fonts/*"],
      "imgs/*": ["imgs/*"],
      "scss/*": ["scss/*"]
    },
    "types": [
      "node",
      "webpack-env",
      "react/next", 
      "react-dom/next"
    ],
    "typeRoots" : [
      "node_modules/@types",
      "@types"
    ]
  },
  "include": [
    "@types",
    "src",
    "server"
  ]
}
